<Window x:Class="GrassCutter_Proxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrassCutter_Proxy" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCMD}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <CheckBox IsChecked="{Binding State}" Content="运行状态" IsEnabled="False"/>
        <TextBox HorizontalAlignment="Left" Margin="312,221,0,0" TextWrapping="Wrap" Text="{Binding Host}" VerticalAlignment="Top" Width="120"/>
        <Button Content="开启/关闭" HorizontalAlignment="Left" Margin="453,180,0,0" VerticalAlignment="Top" Height="60" Width="127" Command="{Binding StartCMD}"/>
        <TextBox HorizontalAlignment="Left" Margin="312,180,0,0" TextWrapping="Wrap" Text="{Binding Port}" VerticalAlignment="Top" Width="120"/>
        <Label Content="代理端口" HorizontalAlignment="Left" Margin="255,176,0,0" VerticalAlignment="Top"/>
        <Label Content="代理目标" HorizontalAlignment="Left" Margin="255,217,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
